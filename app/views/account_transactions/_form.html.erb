<%= simple_form_for(@account_transaction) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :transaction_type %>
    <%= f.input :amount %>
    <%= f.input :prev_balance %>
    <%= f.input :new_balance %>
    <%= f.input :description %>
    <%= f.association :account %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
