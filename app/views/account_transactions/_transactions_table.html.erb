<table class="table table-hover table-sm">
  <thead class="thead-inverse">
    <tr>
      <th>Type</th>
      <th>Amount</th>
      <th>Previous Balance</th>
      <th>New Balance</th>
      <th>Date</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @account_transactions.each do |account_transaction| %>
      <tr>
        <td><%= account_transaction.transaction_type_desc %></td>
        <td><%= number_to_currency(account_transaction.amount, unit: "P") %></td>
        <td><%= number_to_currency(account_transaction.prev_balance, unit: "P") %></td>
        <td><%= number_to_currency(account_transaction.new_balance, unit: "P") %></td>
        <td><%= account_transaction.created_at.localtime.strftime("%^b-%d-%Y %H:%M") %></td>
        <td><%= link_to 'View Details', account_transaction, class: "btn btn-sm btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-md-center">
  <%= will_paginate @account_transactions, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>