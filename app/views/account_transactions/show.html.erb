<p id="notice"><%= notice %></p>

<%= link_to icon("angle-double-left") + " " + @account_transaction.account.account_type_desc + " #" + @account_transaction.account.id.to_s.rjust(6, '0') , account_path(@account_transaction.account) %>
<hr>

<h1>
  <b><%= @account_transaction.transaction_type_desc %></b>
  <small><%=@account_transaction.account.account_type_desc%> #<%= @account_transaction.account.id.to_s.rjust(6, '0') %></small>
</h1>

<div class="row">
  <div class="col-md-6">
    <p><h3><b>Amount:</b> <%= number_to_currency(@account_transaction.amount, unit: "P") %></h3></p>
  </div>
  <div class="col-md-6">
    <p><h3><b>Date:</b> <%= @account_transaction.created_at.localtime.strftime("%^b-%d-%Y %H:%M") %></h3></p>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <p><h3><b>Previous Balance:</b> <%= number_to_currency(@account_transaction.prev_balance, unit: "P") %></h3></p>
  </div>
  <div class="col-md-6">
    <p><h3><b>New Balance:</b> <%= number_to_currency(@account_transaction.new_balance, unit: "P") %></h3></p>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-12">
    <h3><b>Description:</b></h3>
    <%= simple_format(@account_transaction.description) %>
  </div>
</div>