<p id="notice"><%= notice %></p>

<h1><b>Account Types</b></h1>
<%= link_to '<i class="fa fa-plus"></i> Add Account Type'.html_safe, new_account_type_path, class: "pull-right" %>
<table class="table table-hover table-sm">
  <thead class="thead-inverse">
    <tr>
      <th>Label</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @account_types.each do |account_type| %>
      <tr>
        <td><%= account_type.title %></td>
        <td><%= account_type.description %></td>
        <td>
          <div class="pull-right">
            <%= link_to 'View Details', account_type, class: "btn btn-sm btn-info" %>
            <%= link_to 'Edit', edit_account_type_path(account_type), class: "btn btn-sm btn-warning" %>
            <%= link_to 'Delete', account_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-md-center">
  <%= will_paginate @account_types, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>

