<%= simple_form_for(@account) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :account_type, collection: AccountType.all, label_method: :title, value_method: :id, label: "Account Type:", include_blank: false %>
    <%= f.input :beginning_amount, label: "Beginning Amount:" %>
    <%= f.input :user_id, as: :hidden, value: @user.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success pull-right" %>
  </div>
<% end %>
