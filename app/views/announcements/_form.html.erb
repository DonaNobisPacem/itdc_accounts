<%= simple_form_for(@announcement) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :subject, label: "Subject:" %>
    <%= f.input :message, label: "Message:" %>
    <%= f.input :start_date, as: :date_picker, placeholder: "DD/MM/YYYY", label: "Start Date:" %>
    <%= f.input :visible_to_users, as: :radio_buttons, label: "Visible to Users?:" %>
    <%= f.input :visible_to_admins, as: :radio_buttons, label: "Visible to Admins?:" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, data: { confirm: "Are you sure this information is correct?" }, class: "btn btn-success pull-right" %>
  </div>
<% end %>

<script type="text/javascript">
    $('.datetimepicker').datetimepicker();
</script>