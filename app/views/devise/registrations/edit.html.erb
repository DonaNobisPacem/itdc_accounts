<%= link_to icon("angle-double-left") + "My Profile", current_user %>

<hr>

<h1><b>Edit My Account</b></h1>

<div class="row">
  <div class="col-md-12">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name %>
        <%= f.input :last_name %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update", class: "btn btn-success pull-right" %>
      </div>
    <% end %>
  </div>
</div>