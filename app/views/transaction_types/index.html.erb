<h1><b>Transaction Types</b></h1>
<%= link_to '<i class="fa fa-plus"></i> Add Transaction Type'.html_safe, new_transaction_type_path, class: "pull-right" %>
<table class="table table-hover table-sm">
  <thead class="thead-inverse">
    <tr>
      <th>Label</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_types.each do |transaction_type| %>
      <tr>
        <td><%= transaction_type.title %></td>
        <td><%= transaction_type.description %></td>
        <td>
          <div class="pull-right">
            <%= link_to 'View Details', transaction_type, class: "btn btn-sm btn-info" %>
            <%= link_to 'Edit', edit_transaction_type_path(transaction_type), class: "btn btn-sm btn-warning" %>
            <%= link_to 'Delete', transaction_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-md-center">
  <%= will_paginate @transaction_types, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>
