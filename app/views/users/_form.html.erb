<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, label: "First Name:" %>
    <%= f.input :last_name, label: "Last Name:" %>
    <%= f.input :admin, label: "User Type", as: :collection_select, collection: [["Admin", true], ["Regular", false]], include_blank: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: "btn btn-success pull-right" %>
  </div>
<% end %>
